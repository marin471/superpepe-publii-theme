<!DOCTYPE html>
<html lang="{{@website.language}}">
<head>
    {{> head}}
    <link rel="stylesheet" href="{{@website.assetsUrl}}/css/complete-styles.css">
    <style>
        /* Critical inline styles as backup */
        body {
            background-color: #000000 !important;
            color: #ffffff !important;
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        .min-h-screen { min-height: 100vh !important; }
        .bg-black { background-color: #000000 !important; }
        .text-white { color: #ffffff !important; }
        .text-gray-300 { color: #d1d5db !important; }
        .text-yellow-400 { color: #facc15 !important; }
        .text-green-400 { color: #4ade80 !important; }
        .container { max-width: 1200px; margin: 0 auto; padding: 0 1rem; }
        .bg-gradient-to-br { background: linear-gradient(135deg, #1e3a8a 0%, #581c87 50%, #000000 100%) !important; }
        .relative { position: relative !important; }
        .absolute { position: absolute !important; }
        .fixed { position: fixed !important; }
        .flex { display: flex !important; }
        .grid { display: grid !important; }
        .items-center { align-items: center !important; }
        .justify-center { justify-content: center !important; }
        .text-center { text-align: center !important; }
        .py-20 { padding-top: 5rem !important; padding-bottom: 5rem !important; }
        .mb-8 { margin-bottom: 2rem !important; }
        .text-4xl { font-size: 2.25rem !important; }
        .font-bold { font-weight: 700 !important; }
    </style>
</head>
<body class="{{body_class}}">

    <!-- Header -->
    <header class="fixed top-0 w-full z-50 bg-black/90 backdrop-blur-sm border-b border-gray-800">
        <div class="container mx-auto px-4 py-4 flex items-center justify-between">
            <div class="flex items-center gap-2">
                {{#if @website.logo}}
                <img src="{{@website.logo}}" alt="{{@website.name}}" class="w-8 h-8">
                {{/if}}
                <span class="text-xl font-bold text-cyan-400">
                    <a href="{{@website.url}}" class="no-underline">{{@config.custom.siteTitle}}</a>
                </span>
            </div>

            {{> navigation}}

            <button class="bg-cyan-500 hover:bg-cyan-600 text-black font-bold px-4 py-2 rounded transition-colors">
                Connect Wallet
            </button>

            <!-- Mobile menu button -->
            <button class="md:hidden text-white" id="mobile-menu-toggle">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile menu -->
        <div class="md:hidden hidden bg-black/95 backdrop-blur-sm border-t border-gray-800" id="mobile-menu">
            <div class="container mx-auto px-4 py-4 space-y-4">
                {{#menu "main"}}
                    {{#each this}}
                    <a href="{{url}}" class="block text-white hover:text-cyan-400 transition-colors {{#if isActive}}text-cyan-400{{/if}}">
                        {{label}}
                    </a>
                    {{/each}}
                {{/menu}}

                <!-- Default navigation if no menu is set -->
                {{#unless @website.menus.main}}
                <a href="#about" class="block text-white hover:text-cyan-400 transition-colors">About</a>
                <a href="#story" class="block text-white hover:text-cyan-400 transition-colors">History</a>
                <a href="#roadmap" class="block text-white hover:text-cyan-400 transition-colors">Roadmap</a>
                <a href="#how-to-buy" class="block text-white hover:text-cyan-400 transition-colors">How To Buy</a>
                <a href="#faqs" class="block text-white hover:text-cyan-400 transition-colors">FAQs</a>
                {{/unless}}
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main>
        <div class="min-h-screen bg-black text-white overflow-x-hidden">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center pt-20">
    <!-- Background Animation -->
    <div class="absolute inset-0 z-0">
      <div class="w-full h-full bg-gradient-to-br from-blue-900 via-purple-900 to-black">
        <!-- Stars animation -->
        <div class="absolute inset-0 opacity-30 stars-container">
          <!-- Stars will be generated by JavaScript -->
        </div>
      </div>
    </div>

    <div class="relative z-10 container mx-auto px-4 grid lg:grid-cols-2 gap-8 items-center">
      <!-- Left side - Hero content -->
      <div class="text-center lg:text-left">
        {{#if @config.custom.presaleActive}}
        <div class="mb-4 inline-block bg-yellow-500 text-black font-bold px-4 py-2 rounded">
          ‚≠ê PRESALE IS LIVE
        </div>
        {{/if}}

        <h1 class="text-4xl md:text-6xl font-bold mb-4">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-blue-500">
            {{@config.custom.siteTitle}}
          </span>
        </h1>

        <div class="flex items-center justify-center lg:justify-start gap-2 mb-6">
          <img src="{{@config.custom.heroLogo}}" alt="Best Presale 2025" class="h-8">
        </div>

        <p class="text-xl mb-8 text-gray-300">
          {{@config.custom.siteSubtitle}}
        </p>

        <!-- Character Image -->
        <div class="flex justify-center lg:justify-start mb-8">
          {{#if @config.custom.heroCharacterImage}}
          <img src="{{@config.custom.heroCharacterImage}}" alt="{{@config.custom.siteTitle}} Character" class="w-64 h-64 object-contain animate-float">
          {{else}}
          <img src="https://ext.same-assets.com/134012262/2480398897.gif" alt="Super Pepe Character" class="w-64 h-64 object-contain animate-float">
          {{/if}}
        </div>
      </div>

      <!-- Right side - Presale Widget -->
      {{#if @config.custom.presaleActive}}
      <div class="max-w-md mx-auto">
        <div class="bg-blue-900/50 border border-blue-500 backdrop-blur-sm rounded-lg p-6">
          <div class="text-center mb-6">
            <h3 class="text-xl font-bold text-yellow-400 mb-2">
              BUY ${{@config.custom.tokenSymbol}} PRESALE!
            </h3>

            <!-- Countdown Timer -->
            <div class="grid grid-cols-4 gap-2 mb-4">
              <div class="bg-black/50 rounded p-2">
                <div class="text-2xl font-bold text-white">{{@config.custom.countdownDays}}</div>
                <div class="text-xs text-gray-400">DAYS</div>
              </div>
              <div class="bg-black/50 rounded p-2">
                <div class="text-2xl font-bold text-white">{{@config.custom.countdownHours}}</div>
                <div class="text-xs text-gray-400">HOURS</div>
              </div>
              <div class="bg-black/50 rounded p-2">
                <div class="text-2xl font-bold text-white">{{@config.custom.countdownMinutes}}</div>
                <div class="text-xs text-gray-400">MINUTES</div>
              </div>
              <div class="bg-black/50 rounded p-2">
                <div class="text-2xl font-bold text-white">{{@config.custom.countdownSeconds}}</div>
                <div class="text-xs text-gray-400">SECONDS</div>
              </div>
            </div>
          </div>

          <div class="space-y-4">
            <div>
              <p class="text-sm text-gray-300 mb-2">Funds Raised:</p>
              <p class="text-lg font-bold">{{@config.custom.fundsRaised}} / {{@config.custom.fundingGoal}}</p>
              <div class="w-full bg-gray-700 rounded-full h-2 mt-2">
                <div class="bg-blue-500 h-2 rounded-full" style="width: 50.9%"></div>
              </div>
            </div>

            <div class="text-center">
              <p class="text-yellow-400 font-bold">1 {{@config.custom.tokenSymbol}} = {{@config.custom.presalePrice}}</p>
            </div>

            <!-- Currency Selection -->
            <div class="flex gap-2 justify-center">
              <span class="bg-gray-700 text-white px-3 py-1 rounded cursor-pointer">ETH</span>
              <span class="border border-gray-500 text-gray-300 px-3 py-1 rounded cursor-pointer">BNB</span>
              <span class="border border-gray-500 text-gray-300 px-3 py-1 rounded cursor-pointer">USDT</span>
              <span class="border border-gray-500 text-gray-300 px-3 py-1 rounded cursor-pointer">USDC</span>
            </div>

            <!-- Amount inputs -->
            <div class="space-y-3">
              <div>
                <label class="text-sm text-gray-300">Amount You Pay</label>
                <div class="flex items-center bg-black/50 rounded p-3 mt-1">
                  <input type="number" placeholder="0" class="flex-1 bg-transparent text-white outline-none">
                  <img src="https://ext.same-assets.com/134012262/1507808726.png" alt="ETH" class="w-6 h-6 ml-2">
                </div>
              </div>

              <div>
                <label class="text-sm text-gray-300">{{@config.custom.tokenSymbol}} You Receive</label>
                <div class="flex items-center bg-black/50 rounded p-3 mt-1">
                  <input type="number" placeholder="0" class="flex-1 bg-transparent text-white outline-none">
                  <img src="{{@website.logo}}" alt="{{@config.custom.tokenSymbol}}" class="w-6 h-6 ml-2">
                </div>
              </div>
            </div>

            <button class="w-full bg-green-500 hover:bg-green-600 text-black font-bold py-3 rounded transition-colors">
              Connect Wallet
            </button>

            <div class="text-center text-sm text-gray-400">
              Switch to <span class="border border-gray-500 text-gray-300 px-2 py-1 rounded text-xs ml-1">BNB</span>
            </div>
          </div>
        </div>
      </div>
      {{/if}}
    </div>
  </section>

  <!-- Animated Marquee -->
  <div class="bg-blue-600/20 py-4 overflow-hidden">
    <div class="animate-marquee whitespace-nowrap">
      <span class="text-2xl font-bold text-yellow-400 mx-8">
        BUY ${{@config.custom.tokenSymbol}} CRYPTO PRESALE BEFORE LAUNCH! //
      </span>
      <span class="text-2xl font-bold text-yellow-400 mx-8">
        BUY ${{@config.custom.tokenSymbol}} CRYPTO PRESALE BEFORE LAUNCH! //
      </span>
      <span class="text-2xl font-bold text-yellow-400 mx-8">
        BUY ${{@config.custom.tokenSymbol}} CRYPTO PRESALE BEFORE LAUNCH! //
      </span>
    </div>
  </div>

  <!-- Blog Posts Section -->
  {{#if posts}}
  <section class="py-20 bg-gradient-to-b from-blue-900 to-blue-800">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold mb-12 text-center text-white">Latest News</h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {{#each posts}}
        {{> post-card}}
        {{/each}}
      </div>
    </div>
  </section>
  {{/if}}

  <!-- About Section -->
  <section id="about" class="py-20 bg-gradient-to-b from-blue-900 to-blue-800">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold mb-8 text-white">ABOUT {{@config.custom.siteTitle}}</h2>

      <div class="relative max-w-4xl mx-auto">
        {{#if @config.custom.aboutSectionImage}}
        <img src="{{@config.custom.aboutSectionImage}}" alt="About {{@config.custom.siteTitle}}" class="w-full h-auto">
        {{else}}
        <img src="https://ext.same-assets.com/134012262/2893992826.png" alt="About Super Pepe" class="w-full h-auto">
        {{/if}}
      </div>

      <div class="mt-12 max-w-2xl mx-auto">
        <p class="text-lg text-gray-300 leading-relaxed">
          THE NEXT EVOLUTION OF MEME COINS. <br>
          FIRST MEME COIN WITH A MISSION TO <br>
          HELP PEOPLE BY DONATING 10% OF <br>
          EVERY PURCHASE TO <span class="text-green-400 font-bold">CHARITY</span>
        </p>
      </div>
    </div>
  </section>
</div>

<script>
// Generate animated stars
document.addEventListener('DOMContentLoaded', function() {
  const starsContainer = document.querySelector('.stars-container');
  if (starsContainer) {
    for (let i = 0; i < 50; i++) {
      const star = document.createElement('div');
      star.className = 'absolute w-1 h-1 bg-white rounded-full animate-pulse';
      star.style.left = Math.random() * 100 + '%';
      star.style.top = Math.random() * 100 + '%';
      star.style.animationDelay = Math.random() * 3 + 's';
      starsContainer.appendChild(star);
    }
  }
});
</script>
