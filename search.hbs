<!DOCTYPE html>
<html lang="{{@website.language}}">
<head>
    {{> head}}
    <link rel="stylesheet" href="{{@website.assetsUrl}}/css/complete-styles.css">
    <style>
        body {
            background-color: #000000 !important;
            color: #ffffff !important;
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        .min-h-screen { min-height: 100vh !important; }
        .bg-black { background-color: #000000 !important; }
        .text-white { color: #ffffff !important; }
        .text-gray-300 { color: #d1d5db !important; }
        .text-gray-400 { color: #9ca3af !important; }
        .text-yellow-400 { color: #facc15 !important; }
        .text-cyan-400 { color: #22d3ee !important; }
        .bg-gray-700 { background-color: #374151 !important; }
        .bg-gray-600 { background-color: #4b5563 !important; }
        .bg-cyan-500 { background-color: #06b6d4 !important; }
        .bg-cyan-600 { background-color: #0891b2 !important; }
        .container { max-width: 1200px; margin: 0 auto; padding: 0 1rem; }
        .bg-gradient-to-br { background: linear-gradient(135deg, #1e3a8a 0%, #581c87 50%, #000000 100%) !important; }
        .bg-gradient-to-b { background: linear-gradient(to bottom, var(--gradient-from), var(--gradient-to)) !important; }
        .from-blue-900 { --gradient-from: #1e3a8a; }
        .to-purple-900 { --gradient-to: #581c87; }
        .to-blue-800 { --gradient-to: #1e40af; }
        .flex { display: flex !important; }
        .grid { display: grid !important; }
        .items-center { align-items: center !important; }
        .justify-center { justify-content: center !important; }
        .text-center { text-align: center !important; }
        .py-20 { padding-top: 5rem !important; padding-bottom: 5rem !important; }
        .py-2 { padding-top: 0.5rem !important; padding-bottom: 0.5rem !important; }
        .py-3 { padding-top: 0.75rem !important; padding-bottom: 0.75rem !important; }
        .px-2 { padding-left: 0.5rem !important; padding-right: 0.5rem !important; }
        .px-4 { padding-left: 1rem !important; padding-right: 1rem !important; }
        .px-6 { padding-left: 1.5rem !important; padding-right: 1.5rem !important; }
        .px-8 { padding-left: 2rem !important; padding-right: 2rem !important; }
        .mb-8 { margin-bottom: 2rem !important; }
        .text-4xl { font-size: 2.25rem !important; }
        .font-bold { font-weight: 700 !important; }
        .rounded { border-radius: 0.25rem !important; }
        .max-w-2xl { max-width: 42rem !important; }
        .mx-auto { margin-left: auto !important; margin-right: auto !important; }
        .gap-4 { gap: 1rem !important; }
        .gap-3 { gap: 0.75rem !important; }
        .flex-1 { flex: 1 1 0% !important; }
        .border { border-width: 1px !important; }
        .border-gray-600 { border-color: #4b5563 !important; }
        .focus\:border-cyan-400:focus { border-color: #22d3ee !important; }
        .focus\:outline-none:focus { outline: none !important; }
        input { background: rgba(0,0,0,0.5) !important; border: 1px solid #4b5563 !important; color: #ffffff !important; padding: 0.75rem 1rem !important; border-radius: 0.25rem !important; }
        input::placeholder { color: #9ca3af !important; }
        input:focus { border-color: #22d3ee !important; outline: none !important; }
        button { border: none !important; cursor: pointer !important; transition: all 0.2s ease-in-out !important; }
    </style>
</head>
<body>

<div class="min-h-screen bg-black text-white">
  <!-- Search Header -->
  <header class="post-header bg-gradient-to-b from-blue-900 to-purple-900 py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white">Search Results</h1>

      {{#if searchQuery}}
      <p class="text-xl text-gray-300 mb-8">
        Results for: <span class="text-yellow-400 font-bold">"{{searchQuery}}"</span>
      </p>
      {{/if}}

      <!-- Search Form -->
      <div class="max-w-2xl mx-auto">
        <form action="{{@website.url}}/search/" method="get" class="flex gap-4">
          <input
            type="text"
            name="q"
            value="{{searchQuery}}"
            placeholder="Search posts, pages, and more..."
            class="flex-1 bg-black/50 border border-gray-600 rounded px-4 py-3 text-white placeholder-gray-400 focus:border-cyan-400 focus:outline-none">
          <button
            type="submit"
            class="bg-cyan-500 hover:bg-cyan-600 text-black font-bold px-8 py-3 rounded transition-colors">
            Search
          </button>
        </form>
      </div>
    </div>
  </header>

  <!-- Search Results -->
  <section class="py-20 bg-gradient-to-b from-blue-900 to-blue-800">
    <div class="container mx-auto px-4">
      {{#if searchResults}}
      <div class="mb-8">
        <p class="text-gray-300 text-center">
          Found {{searchResults.length}} {{#if searchResults.length.eq.1}}result{{else}}results{{/if}}
        </p>
      </div>

      <div class="max-w-4xl mx-auto space-y-8">
        {{#each searchResults}}
        <article class="bg-black/30 rounded-lg p-6 border border-gray-700 hover:border-gray-600 transition-colors">
          <h2 class="text-2xl font-bold text-white mb-3">
            <a href="{{url}}" class="hover:text-yellow-400 transition-colors">{{title}}</a>
          </h2>

          {{#if excerpt}}
          <p class="text-gray-300 mb-4 leading-relaxed">{{excerpt}}</p>
          {{/if}}

          <div class="flex items-center justify-between text-sm text-gray-400">
            <div class="flex items-center gap-4">
              {{#if type}}
              <span class="bg-gray-700 text-white px-2 py-1 rounded text-xs">{{type}}</span>
              {{/if}}

              {{#if author}}
              <span>By {{author.name}}</span>
              {{/if}}

              {{#if createdAt}}
              <time datetime="{{date createdAt 'YYYY-MM-DD'}}">{{date createdAt "MMM DD, YYYY"}}</time>
              {{/if}}
            </div>

            <a href="{{url}}" class="text-yellow-400 hover:text-yellow-300 transition-colors">
              Read More â†’
            </a>
          </div>

          {{#if tags}}
          <div class="mt-4 flex flex-wrap gap-2">
            {{#each tags}}
            <a href="{{url}}" class="bg-gray-700 hover:bg-gray-600 text-white text-xs px-2 py-1 rounded transition-colors">
              {{name}}
            </a>
            {{/each}}
          </div>
          {{/if}}
        </article>
        {{/each}}
      </div>

      <!-- Pagination for search results -->
      {{> pagination}}

      {{else}}
      <!-- No Results -->
      <div class="text-center py-20">
        {{#if searchQuery}}
        <div class="mb-8">
          <img src="https://ext.same-assets.com/134012262/2480398897.gif"
               alt="No Results Pepe"
               class="w-32 h-32 mx-auto animate-float">
        </div>

        <h2 class="text-3xl font-bold text-white mb-4">No Results Found</h2>
        <p class="text-gray-300 mb-8 max-w-2xl mx-auto leading-relaxed">
          Sorry, we couldn't find any posts matching <span class="text-yellow-400 font-bold">"{{searchQuery}}"</span>.
          Try searching with different keywords or check out our popular content below.
        </p>
        {{else}}
        <h2 class="text-3xl font-bold text-white mb-4">Start Your Search</h2>
        <p class="text-gray-300 mb-8">Enter a search term above to find posts, pages, and more.</p>
        {{/if}}

        <!-- Search Suggestions -->
        <div class="max-w-2xl mx-auto">
          <h3 class="text-xl font-bold text-white mb-4">Popular Topics</h3>
          <div class="flex flex-wrap justify-center gap-3">
            <a href="{{@website.url}}/search/?q=presale" class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded transition-colors">
              Presale
            </a>
            <a href="{{@website.url}}/search/?q=crypto" class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded transition-colors">
              Crypto
            </a>
            <a href="{{@website.url}}/search/?q=blockchain" class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded transition-colors">
              Blockchain
            </a>
            <a href="{{@website.url}}/search/?q=defi" class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded transition-colors">
              DeFi
            </a>
            <a href="{{@website.url}}/search/?q=meme" class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded transition-colors">
              Meme Coin
            </a>
          </div>
        </div>

        <div class="mt-8">
          <a href="{{@website.url}}" class="bg-cyan-500 hover:bg-cyan-600 text-black font-bold px-6 py-3 rounded transition-colors">
            Browse All Posts
          </a>
        </div>
      </div>
      {{/if}}
    </div>
  </section>
</div>

<script src="{{@website.assetsUrl}}/js/scripts.js"></script>
{{> footer}}
</body>
</html>
