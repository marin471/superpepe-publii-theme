{{!< default}}

<div class="min-h-screen bg-black text-white flex items-center justify-center">
  <div class="container mx-auto px-4 text-center">
    <!-- Animated Background -->
    <div class="absolute inset-0 z-0">
      <div class="w-full h-full bg-gradient-to-br from-blue-900 via-purple-900 to-black">
        <div class="absolute inset-0 opacity-30 stars-container">
          <!-- Stars will be generated by JavaScript -->
        </div>
      </div>
    </div>

    <div class="relative z-10 max-w-2xl mx-auto">
      <!-- 404 Character -->
      <div class="mb-8">
        <img src="https://ext.same-assets.com/134012262/2480398897.gif"
             alt="Lost Pepe"
             class="w-48 h-48 mx-auto animate-float">
      </div>

      <!-- Error Message -->
      <h1 class="text-8xl font-bold mb-4">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-400 to-yellow-500">
          404
        </span>
      </h1>

      <h2 class="text-3xl font-bold text-white mb-6">Page Not Found</h2>

      <p class="text-xl text-gray-300 mb-8 leading-relaxed">
        Oops! Looks like this page got lost in the crypto space.
        Even Super Pepe couldn't find it! 🚀
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="{{@website.url}}"
           class="bg-cyan-500 hover:bg-cyan-600 text-black font-bold px-8 py-3 rounded transition-colors inline-block">
          🏠 Go Home
        </a>

        <a href="{{@website.url}}/search/"
           class="bg-gray-700 hover:bg-gray-600 text-white font-bold px-8 py-3 rounded transition-colors inline-block">
          🔍 Search Site
        </a>

        <button onclick="history.back()"
                class="bg-blue-600 hover:bg-blue-700 text-white font-bold px-8 py-3 rounded transition-colors">
          ← Go Back
        </button>
      </div>

      <!-- Popular Pages -->
      <div class="mt-16">
        <h3 class="text-xl font-bold text-white mb-6">Popular Pages</h3>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="{{@website.url}}/#about"
             class="text-cyan-400 hover:text-cyan-300 transition-colors">
            About
          </a>
          <span class="text-gray-500">•</span>
          <a href="{{@website.url}}/#roadmap"
             class="text-cyan-400 hover:text-cyan-300 transition-colors">
            Roadmap
          </a>
          <span class="text-gray-500">•</span>
          <a href="{{@website.url}}/#how-to-buy"
             class="text-cyan-400 hover:text-cyan-300 transition-colors">
            How to Buy
          </a>
          <span class="text-gray-500">•</span>
          <a href="{{@website.url}}/#faqs"
             class="text-cyan-400 hover:text-cyan-300 transition-colors">
            FAQs
          </a>
        </div>
      </div>

      <!-- Fun Error Messages -->
      <div class="mt-12 p-6 bg-blue-900/30 rounded-lg border border-blue-500">
        <p class="text-gray-300 text-sm">
          <strong>Error Code:</strong> PEPE_NOT_FOUND<br>
          <strong>Status:</strong> Super Pepe is searching the blockchain...<br>
          <strong>Suggestion:</strong> Try hodling and refreshing! 💎🙌
        </p>
      </div>
    </div>
  </div>
</div>
