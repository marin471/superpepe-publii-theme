{{!< default}}

<div class="min-h-screen bg-black text-white">
  <!-- Author Header -->
  <header class="post-header bg-gradient-to-b from-blue-900 to-purple-900 py-20">
    <div class="container mx-auto px-4 text-center">
      {{#if author.avatar}}
      <div class="mb-8">
        <img src="{{author.avatar}}" alt="{{author.name}}" class="w-32 h-32 rounded-full mx-auto border-4 border-cyan-400">
      </div>
      {{/if}}

      <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white">{{author.name}}</h1>

      {{#if author.description}}
      <p class="text-xl text-gray-300 max-w-2xl mx-auto mb-6">{{author.description}}</p>
      {{/if}}

      <div class="flex items-center justify-center gap-6 text-gray-300">
        <span>{{postsNumber}} {{#if postsNumber.eq.1}}post{{else}}posts{{/if}}</span>

        {{#if author.website}}
        <span>‚Ä¢</span>
        <a href="{{author.website}}" target="_blank" rel="noopener" class="text-cyan-400 hover:text-cyan-300 transition-colors">
          üåê Website
        </a>
        {{/if}}

        {{#if author.twitter}}
        <span>‚Ä¢</span>
        <a href="https://twitter.com/{{author.twitter}}" target="_blank" rel="noopener" class="text-cyan-400 hover:text-cyan-300 transition-colors">
          üê¶ Twitter
        </a>
        {{/if}}
      </div>
    </div>
  </header>

  <!-- Author Posts -->
  <section class="py-20 bg-gradient-to-b from-blue-900 to-blue-800">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-white mb-12">
        Posts by {{author.name}}
      </h2>

      {{#if posts}}
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {{#each posts}}
        <article class="bg-black/30 rounded-lg overflow-hidden hover-lift">
          {{#if featuredImage}}
          <a href="{{url}}">
            <img src="{{featuredImage.url}}" alt="{{title}}" class="w-full h-48 object-cover">
          </a>
          {{/if}}
          <div class="p-6">
            <h3 class="text-xl font-bold text-white mb-3">
              <a href="{{url}}" class="hover:text-yellow-400 transition-colors">{{title}}</a>
            </h3>
            <p class="text-gray-300 mb-4">{{excerpt}}</p>
            <div class="flex items-center justify-between text-sm text-gray-400">
              <time datetime="{{date createdAt 'YYYY-MM-DD'}}">{{date createdAt "MMM DD, YYYY"}}</time>
              <a href="{{url}}" class="text-yellow-400 hover:text-yellow-300 transition-colors">Read More</a>
            </div>

            {{#if tags}}
            <div class="mt-4 flex flex-wrap gap-2">
              {{#each tags}}
              <a href="{{url}}" class="bg-gray-700 hover:bg-gray-600 text-white text-xs px-2 py-1 rounded transition-colors">
                {{name}}
              </a>
              {{/each}}
            </div>
            {{/if}}
          </div>
        </article>
        {{/each}}
      </div>

      <!-- Pagination -->
      {{#if pagination}}
      <div class="mt-16 flex justify-center">
        <nav class="flex items-center gap-4">
          {{#if pagination.previousPage}}
          <a href="{{pagination.previousPage.url}}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition-colors">
            Previous
          </a>
          {{/if}}

          <span class="text-gray-300">
            Page {{pagination.currentPage}} of {{pagination.totalPages}}
          </span>

          {{#if pagination.nextPage}}
          <a href="{{pagination.nextPage.url}}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition-colors">
            Next
          </a>
          {{/if}}
        </nav>
      </div>
      {{/if}}

      {{else}}
      <div class="text-center py-20">
        <h3 class="text-2xl font-bold text-white mb-4">No posts yet</h3>
        <p class="text-gray-300 mb-8">{{author.name}} hasn't published any posts yet.</p>
        <a href="{{@website.url}}" class="bg-cyan-500 hover:bg-cyan-600 text-black font-bold px-6 py-3 rounded transition-colors">
          Go Back Home
        </a>
      </div>
      {{/if}}
    </div>
  </section>
</div>
