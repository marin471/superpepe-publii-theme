<!-- Social Share Buttons -->
<div class="social-share">
    <h3 class="text-lg font-bold text-white mb-4">Share this post</h3>
    <div class="flex gap-4">
        <a href="https://twitter.com/intent/tweet?url={{@website.url}}{{url}}&text={{title}}"
           target="_blank"
           rel="noopener noreferrer"
           class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition-colors"
           aria-label="Share on Twitter">
            𝕏 Twitter
        </a>

        <a href="https://www.facebook.com/sharer/sharer.php?u={{@website.url}}{{url}}"
           target="_blank"
           rel="noopener noreferrer"
           class="bg-blue-700 hover:bg-blue-800 text-white px-4 py-2 rounded transition-colors"
           aria-label="Share on Facebook">
            📘 Facebook
        </a>

        <a href="https://www.linkedin.com/sharing/share-offsite/?url={{@website.url}}{{url}}"
           target="_blank"
           rel="noopener noreferrer"
           class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition-colors"
           aria-label="Share on LinkedIn">
            💼 LinkedIn
        </a>

        <a href="https://t.me/share/url?url={{@website.url}}{{url}}&text={{title}}"
           target="_blank"
           rel="noopener noreferrer"
           class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition-colors"
           aria-label="Share on Telegram">
            📱 Telegram
        </a>

        <button onclick="copyToClipboard('{{@website.url}}{{url}}')"
                class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded transition-colors"
                aria-label="Copy link">
            🔗 Copy Link
        </button>
    </div>
</div>

<script>
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
        alert('Link copied to clipboard!');
    }, function(err) {
        console.error('Could not copy text: ', err);
    });
}
</script>
