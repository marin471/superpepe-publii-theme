<!-- Reusable Post Card -->
<article class="bg-black/30 rounded-lg overflow-hidden hover-lift transition-transform duration-300">
    {{#if featuredImage}}
    <a href="{{url}}">
        <img src="{{featuredImage.url}}" alt="{{title}}" class="w-full h-48 object-cover">
    </a>
    {{/if}}

    <div class="p-6">
        {{#if tags}}
        <div class="mb-3">
            {{#each tags}}
            <a href="{{url}}" class="inline-block bg-gray-700 hover:bg-gray-600 text-white text-xs px-2 py-1 rounded mr-2 mb-1 transition-colors">
                {{name}}
            </a>
            {{/each}}
        </div>
        {{/if}}

        <h3 class="text-xl font-bold text-white mb-3 line-clamp-2">
            <a href="{{url}}" class="hover:text-yellow-400 transition-colors">{{title}}</a>
        </h3>

        {{#if excerpt}}
        <p class="text-gray-300 mb-4 line-clamp-3">{{excerpt}}</p>
        {{/if}}

        <div class="flex items-center justify-between text-sm text-gray-400">
            <div class="flex items-center gap-2">
                {{#if author.avatar}}
                <img src="{{author.avatar}}" alt="{{author.name}}" class="w-4 h-4 rounded-full">
                {{/if}}
                <span>{{author.name}}</span>
                <span>•</span>
                <time datetime="{{date createdAt 'YYYY-MM-DD'}}">{{date createdAt "MMM DD, YYYY"}}</time>
            </div>

            <a href="{{url}}" class="text-yellow-400 hover:text-yellow-300 transition-colors font-medium">
                Read More →
            </a>
        </div>
    </div>
</article>
